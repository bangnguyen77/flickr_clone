<% @images.each do |image| %>
  <h3><%= image.title %></h3>
  <h5>posted by <%= image.user.email %></h5>
  <img src="<%=image.url%>">
  <% if current_user && current_user.id == image.user.id %>
  <%= button_to "edit", edit_image_path(image), method: "get" %>
  <%= button_to "delete", image_path(image), method: "delete",  :data =>
                                            {:confirm => "Are you sure?",
                                              method: "delete"
                                              }%>
    <% end %>
  <% if image.tags.any? %>
    <h6>Tags:</h6>
    <% image.tags.each do |tag| %>
      <h6><%= link_to tag.name, tag_path(tag)%></h6>
    <% end %>
  <% end %>
  <%= button_to "edit tags", image_path(image), method: "get" %>
<% end %>

<hr>
<% if current_user %>
  <%= link_to "Add an image", new_image_path %>
<% end %>
