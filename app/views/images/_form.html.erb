<%= render "layouts/errors", :object => @image %>
<h5>Please separate tags with a comma</h5>
  <%= form_tag @image do %>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
    <%= label_tag :url %>
    <%= text_field_tag :url %>
    <%= label_tag :tags %>
    <%= text_field_tag :tags %>
    <%= submit_tag 'Create Image', class:"btn btn-lg btn-primary bigButton"%>
  <% end %>
